<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ask a Question</title>

    <style>
      * {
        box-sizing: border-box;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }

      body {
        margin: 0;
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea, #764ba2);
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      /* Card */
      .question-card {
        background: #ffffff;
        width: 100%;
        max-width: 600px;
        margin: 80px 20px;
        padding: 35px;
        border-radius: 16px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
      }

      .question-card h2 {
        text-align: center;
        margin-bottom: 25px;
        color: #333;
      }

      /* Form group */
      .form-group {
        margin-bottom: 20px;
      }

      label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #444;
      }

      input[type="text"],
      textarea {
        width: 100%;
        padding: 14px;
        border-radius: 10px;
        border: 1px solid #ccc;
        font-size: 1rem;
        transition: 0.3s;
      }

      input:focus,
      textarea:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 6px rgba(102, 126, 234, 0.4);
      }

      textarea {
        resize: vertical;
        min-height: 120px;
      }

      /* File input */
      input[type="file"] {
        border: none;
        font-size: 0.95rem;
      }

      .image-preview {
        margin-top: 10px;
        display: none;
      }

      .image-preview img {
        max-width: 100%;
        border-radius: 10px;
      }

      /* Button */
      button {
        width: 100%;
        padding: 15px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border: none;
        border-radius: 12px;
        color: #fff;
        font-size: 1.1rem;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
      }

      button:hover {
        opacity: 0.9;
        transform: translateY(-2px);
      }

      /* Responsive */
      @media (max-width: 600px) {
        .question-card {
          padding: 25px;
        }
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <%- include("../components/navbar") %>

    <div class="question-card">
      <h2>Ask a Question</h2>

      <form action="/questions" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label>Title</label>
          <input
            type="text"
            name="title"
            placeholder="Enter a clear and concise title"
            required
          />
        </div>

        <div class="form-group">
          <label>Description</label>
          <textarea
            name="description"
            placeholder="Explain your question in detail..."
            required
          ></textarea>
        </div>

        <div class="form-group">
          <label>Upload Image (optional)</label>
          <input
            type="file"
            name="image"
            accept="image/*"
            onchange="previewImage(event)"
          />
          <div class="image-preview" id="preview">
            <img id="previewImg" />
          </div>
        </div>

        <button type="submit">Post Question</button>
      </form>
    </div>

    <script>
      function previewImage(event) {
        const preview = document.getElementById("preview");
        const img = document.getElementById("previewImg");
        img.src = URL.createObjectURL(event.target.files[0]);
        preview.style.display = "block";
      }
    </script>
  </body>
</html>
